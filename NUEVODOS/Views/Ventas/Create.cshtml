@model NUEVODOS.Models.Venta

@{
    ViewData["Title"] = "Create";
}


<div class="container"  style="font-family:serif; font-weight: bold">
    <div class="row">
        <div class="col-sm-12">
            <br />
            <h3 class="text-center">Registro de venta</h3>
        </div>
        <div class="col-sm-6 offset-sm-3">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <br />
                <div class="form-group">
                    <label asp-for="Placaventa" class="control-label">Placa del vehiculo</label>
                    <select asp-for="Placaventa" class ="form-control" asp-items="ViewBag.Placaventa"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Precioventa" class="control-label">Precio de la venta</label>
                    <input asp-for="Precioventa" class="form-control"/>
                    <span asp-validation-for="Precioventa" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Mpventa" class="control-label">Método de pago</label>
                    <input asp-for="Mpventa" class="form-control"/>
                    <span asp-validation-for="Mpventa" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Limitacionesventa" class="control-label">Limitaciones</label>
                    <input asp-for="Limitacionesventa" class="form-control"/>
                    <span asp-validation-for="Limitacionesventa" class="text-danger"></span>
                </div>
                <div class="form-group">
                  <label asp-for="Ciudadventa" class="control-label">Ciudad</label>
                  <select asp-for="Ciudadventa" class="form-select" id="floatingSelectDisabled" aria-label="Floating label disabled select example" required>
                    <option selected></option>
                    <option value="Bogotá">Bogotá</option>
                    <option value="Cali">Cali</option>
                    <option value="Medellin">Medellin</option>
                    <option value="Barranquilla">Barranquilla</option>
                    <option value="Cúcuta">Cúcuta</option>
                    <option value="Manizales">Manizales</option>
                    <option value="Bucaramanga">Bucaramanga</option>
                    <option value="Santa Marta">Santa Marta</option>
                    <option value="Cartagena">Cartagena</option>
                    <option value="Pereira">Pereira</option>
                    <span asp-validation-for="Ciudadventa" class="text-danger"></span>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Spventa" class="control-label">Sanción pecunaria</label>
                    <input asp-for="Spventa" class="form-control" />
                    <span asp-validation-for="Spventa" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <br />
                    <button type="submit" class="btn btn-info">Registrar</button>
                    <a type="submit" class="btn btn-danger" asp-controller="Ventas"  asp-action="Index">Cancelar</a>
                </div>
            </form> 
        </div>
    </div>

</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

